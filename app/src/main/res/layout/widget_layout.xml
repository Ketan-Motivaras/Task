<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Button to open the camera activity -->
    <ImageButton
        android:id="@+id/btnClickImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@color/black"
        android:scaleType="centerCrop"
        android:src="@drawable/demo" />

    <!-- Button to start location service -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btnStartLocation"
            android:layout_width="50dp"
            android:background="#00FF00"
            android:layout_height="50dp"/>

        <TextView
            android:id="@+id/txtStartLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_location_fetching"
            android:layout_marginStart="8dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black" />
    </LinearLayout>

    <!-- Button to stop location service -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btnStopLocation"
            android:layout_width="50dp"
            android:background="#FF0000"
            android:layout_height="50dp"/>

        <TextView
            android:id="@+id/txtStopLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop Location Fetching"
            android:layout_marginStart="8dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000" />
    </LinearLayout>

</LinearLayout>

